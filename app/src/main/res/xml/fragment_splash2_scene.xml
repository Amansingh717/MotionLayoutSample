<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/widget" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/widget" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1500">
        <KeyFrameSet>
            <!-- line 1 horizontal -->
            <KeyAttribute
                android:translationX="-400dp"
                app:framePosition="0"
                app:motionTarget="@id/line1"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationX="8dp"
                app:framePosition="50"
                app:motionTarget="@id/line1"
                app:transitionEasing="decelerate" />

            <KeyAttribute
                android:translationX="-8dp"
                app:framePosition="55"
                app:motionTarget="@id/line1"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationX="0dp"
                app:framePosition="60"
                app:motionTarget="@id/line1"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/line1"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="65"
                app:motionTarget="@id/line1"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/line1"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>

            <!-- line 2 horizontal -->
            <KeyAttribute
                android:translationX="400dp"
                app:framePosition="0"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationX="-8dp"
                app:framePosition="50"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationX="8dp"
                app:framePosition="55"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationX="0dp"
                app:framePosition="60"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="65"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/line2"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>

            <!-- line 3 Vertical -->
            <KeyAttribute
                android:translationY="600dp"
                app:framePosition="0"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationY="-8dp"
                app:framePosition="50"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationY="8dp"
                app:framePosition="55"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationY="0dp"
                app:framePosition="60"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="65"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/line3"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>


            <!-- line 4 Vertical -->
            <KeyAttribute
                android:translationY="-600dp"
                app:framePosition="0"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationY="8dp"
                app:framePosition="50"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationY="-8dp"
                app:framePosition="55"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:translationY="0dp"
                app:framePosition="60"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="65"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/line4"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>


            <!-- View -->
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/view"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="60"
                app:motionTarget="@id/view"
                app:transitionEasing="accelerate" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/view"
                app:transitionEasing="accelerate" />


            <!-- Background -->
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="65"
                app:motionTarget="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/design_default_color_primary_dark" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>
</MotionScene>
